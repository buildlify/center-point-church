---
import { ArrowLongRightIcon } from '@heroicons/react/24/outline/index';

const { item } = Astro.props;
---

<div
  class="rounded-primary shadow-main m-4 min-w-fit max-w-sm flex-1 bg-white p-4 sm:min-w-[384px]"
>
  <h3
    class="decoration-primary underline-offset-3 text-lg font-bold underline decoration-4"
  >
    {item.title}
  </h3>
  <p class="text-darkGray mb-4 md:text-lg">
    {item.desc}
  </p>
  {
    item.link && (
      <a href={item.link} target="_blank" class="text-secondary">
        Learn More <ArrowLongRightIcon className="inline-block h-6 w-6" />
      </a>
    )
  }
</div>
