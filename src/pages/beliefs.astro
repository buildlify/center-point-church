      {
        text: '1 John 5:11-13',
        link: 'https://www.biblegateway.com/passage/?search=1+John+5%3A11-13&version=NIV',
      },
    ],
  },
];
---

<Layout title="Beliefs">
  <Container title="Our Beliefs">
    <div class="mx-auto mt-7 max-w-3xl">
      {
        data.map((item) => (
          <div class="mt-5">
            <h3 class="font-primary text-xl font-bold md:text-2xl">
              {item.title}
            </h3>
            <p class="text-darkGray md:text-lg">{item.desc}</p>
            <div class="mt-1 space-x-2">
              {item.verses.map((verse) => (
                <a
                  class="bg-gray rounded-primary inline-block w-fit px-2 py-1 text-xs font-semibold transition-all hover:scale-[1.03] md:text-sm"
                  href={verse.link}
                  target="_blank"
                >
                  {verse.text}
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</Layout>
