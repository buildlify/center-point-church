---
import Container from '@/layouts/Container.astro';
import Layout from '@/layouts/Layout.astro';

const data = [
  {
    title: 'The Bible',
    desc: 'We believe the Bible is the inspired word of God.',
    verses: [
      {
        text: 'II Timothy 3:16',
        link: 'https://www.biblegateway.com/passage/?search=2+Timothy+3%3A16&version=NIV',
      },
    ],
  },
  {
    title: 'God',
    desc: 'We believe in the one true God, revealed as Father, Son, and the Holy Spirit.',
    verses: [
      {
        text: 'John 14:18-27',
        link: 'https://www.biblegateway.com/passage/?search=John%2014%3A18-27&version=NIV',
      },
      {
        text: 'II Corinthians 13:14',
        link: 'https://www.biblegateway.com/passage/?search=2%20Corinthians%2013%3A14&version=NIV',
      },
    ],
  },
  {
    title: 'God In Flesh',
    desc: 'We believe in the virgin birth, the begotten sonship, and the deity of Jesus Christ. We believe that Jesus was both God and man.',
